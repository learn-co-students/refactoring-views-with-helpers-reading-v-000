<%#below utilizes our application helper to set @author.name to the title variabel which is used in the application.html.erb form in the layout directory%>
<% title @author.name %>

<h1><%= @author.name %></h1>
<p>Posts:</p>
<% @author.posts.each do |post| %>
  <div><%= post.title %> - <%= last_updated post %></div>
<% end %>
